<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.saintdev.idos">
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:targetSdkVersion="27"
        android:minSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".views.activitys.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.activitys.AudioRecordActivity"
            android:enabled="true"
            android:screenOrientation="portrait" />

        <activity android:name=".views.activitys.ConvertActivity"
            android:enabled="true"
            android:screenOrientation="portrait" />

        <activity android:name=".views.activitys.TranslateActivity"
            android:enabled="true"
            android:screenOrientation="portrait" />

        <activity android:name=".views.activitys.SettingsActivity"
            android:enabled="true" />

        <activity android:name=".views.activitys.SearchActivity"
            android:enabled="true" />
    </application>

</manifest>